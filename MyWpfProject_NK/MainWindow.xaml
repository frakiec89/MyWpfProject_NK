        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MyWpfProject_NK"
        mc:Ignorable="d"
        Title="Вход" MinWidth="250"  SizeToContent="WidthAndHeight" >
    <Grid Margin="50">
        <StackPanel>
            <TextBox Margin="5" x:Name="tbLogin"></TextBox>
            <TextBlock>логин</TextBlock>
            <TextBox Margin="5" x:Name="tbPassword"></TextBox>
            <TextBlock>Пароль</TextBlock>

            <Button Margin="5" x:Name="btnIn" Click="btnIn_Click">Вход</Button>
        </StackPanel>

    </Grid>
</Window>
